<div id="attachment" class="modal hide fade content" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Request Attachment</h3>
  </div>

  <%= form_for(@request_attachment, :html => {:class => "form-horizontal"}) do |f| %>
    <% if @request_attachment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@request_attachment.errors.count, "error") %> prohibited this request_attachment from being saved:</h2>

        <ul>
          <% @request_attachment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="modal-body">
      <div class="control-group">
        <%= f.label :attachment, :class => "control-label" %>
        <div class="controls">
          <%= f.file_field :attachment %>
        </div>
      </div>
    
      <%= f.hidden_field :request_id %>
    </div>

    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
