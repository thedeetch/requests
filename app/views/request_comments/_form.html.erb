  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Request Comment</h3>
  </div>

  <%= form_for(@request_comment, :html => {:class => "form-horizontal"}) do |f| %>
    <% if @request_comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@request_comment.errors.count, "error") %> prohibited this request_comment from being saved:</h2>

        <ul>
        <% @request_comment.errors.full_messages.each do |msg| %>
