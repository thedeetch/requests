<table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Created</th>
        <th>User</th>
        <th>Priority</th>
        <th>Target date</th>
      </tr>
    </thead>
    <tbody>
        <% requests.each do |request| %>
          <tr class="<%= DateTime.now > request.target_date ? "error" : "" %>">
            <td><%= request.id %></td>
            <td><%= link_to request.title, request %></td>
            <td><%= request.created_at %></td>
            <td><%= request.user_id %></td>
            <td><%= request.priority %></td>
            <td><%= request.target_date %></td>
          </tr>
        <% end %>
    </tbody>
</table>