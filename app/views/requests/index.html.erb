<h1>Listing requests</h1>

<table class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Target date</th>
    <th>Status</th>
    <th>User</th>
    <th>Priority</th>
    <th>Context</th>
    <!--<th></th>
    <th></th>
    <th></th>-->
  </tr>
</thead>
<tbody>
<% @requests.each do |request| %>
  <tr>
    <td><%= request.id %></td>
    <td><%= link_to request.title, request %></td>
    <td><%= request.target_date %></td>
    <td><%= request.status %></td>
    <td><%= request.user_id %></td>
    <td><%= request.priority %></td>
    <td><%= request.context %></td>
    <!--<td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
  </tr>
<% end %>
</tbody>
</table>

