<div id="team" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Request Team</h3>
  </div>

  <%= form_for(@request_team, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @request_team.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@request_team.errors.count, "error") %> prohibited this request_team from being saved:</h2>

    <ul>
      <% @request_team.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="modal-body">
    <div class="control-group">
      <%= f.label :team_id, :class => "control-label" %>
      <div class="controls">
        <%= f.collection_select :team_id, @request.teams - Team.all, :id, :name, :prompt => "Please Select", :required => true %>
      </div>
    </div>

    <%= f.hidden_field :request_id %>
  </div>

  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <%= f.submit "Save", :class => "btn btn-primary" %>
  </div>

  <% end %>
</div>