<div id="user" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Request Comment</h3>
  </div>

  <%= form_for(@request_user, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @request_user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@request_user.errors.count, "error") %> prohibited this request_user from being saved:</h2>

    <ul>
      <% @request_user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="modal-body">
    <div class="control-group">
      <%= f.label :user_id, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :user_id, :required => true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :role, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :role, :required => true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :begin, :class => "control-label" %>
      <div class="controls">
        <%= f.datetime_select :begin %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :end, :class => "control-label" %>
      <div class="controls">
        <%= f.datetime_select :end %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :allocation, :class => "control-label" %>
      <div class="controls">
        <div class="input-append">
          <%= f.number_field :allocation, {:in => 0...101, :step => 5} %>
          <span class="add-on">%</span>
        </div>
      </div>
    </div>

    <%= f.hidden_field :request_id %>
  </div>

  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <%= f.submit :class => "btn btn-primary" %>
  </div>
  <% end %>
</div>